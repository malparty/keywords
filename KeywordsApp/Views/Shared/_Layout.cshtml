<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - keywords</title>
<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap-4.6.0-dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-5.15.3/css/fontawesome.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-5.15.3/css/solid.css" />
    <script src="~/dist/csssite.js" defer></script>
</environment>
<environment exclude="Development">
    <link rel="stylesheet" href="~/lib/bootstrap-4.6.0-dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-5.15.3/css/fontawesome.min.css" />
    <link rel="stylesheet" href="~/lib/fontawesome-5.15.3/css/solid.min.css" />
    <script src="~/dist/csssite.min.js" defer></script>
</environment>

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
        <div class="container">
            <a class="navbar-brand" href="/">Keywords</a>
            <button
            class="navbar-toggler"
            type="button"
            data-mdb-toggle="collapse"
            data-mdb-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent"
            aria-expanded="false"
            aria-label="Toggle navigation"
            >
            <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse  justify-content-between" id="navbarSupportedContent">
            @{
                // TODO HERE: put search form instead of div:
            }
                <div id="searchForm"></div>
                <partial name="_LoginPartial" />    
            </div>
        </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - <a asp-area="" asp-controller="File" asp-action="Index">Keywords</a>
        </div>
    </footer>

    <environment include="Development">
        <script src="~/lib/jquery-3.6.0-dist/jquery-3.6.0.js" defer></script>
        <script src="~/lib/bootstrap-4.6.0-dist/js/bootstrap.js" defer></script>
        @await RenderSectionAsync("Scripts", required: false)
        <script src="~/dist/site.js" defer></script>
    </environment>
    <environment exclude="Development">
        <script src="~/lib/jquery-3.6.0-dist/jquery-3.6.0.min.js" defer></script>
        <script src="~/lib/bootstrap-4.6.0-dist/js/bootstrap.min.js" defer></script>
        @await RenderSectionAsync("Scripts", required: false)
        <script src="~/dist/site.min.js" defer></script>
    </environment>
        
</body>
</html>
