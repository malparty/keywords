@model KeywordsApp.Models.File.FileViewModel

<div class="col-lg-3 col-md-6">
    <div id="@(string.Format("fileCard{0}",Model.FileId))" class="card mb-2">
        <div class="card-body">
            <h5 class="card-title">
                @Model.Name
                <span class="badge badge-secondary" title="Number of keywords">@Model.TotalKeywordsCount</span>
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.CreatedDate.ToString("d")</h6>
            @if(Model.ShowProgressBar){
                <div class="progress">
                    <div class="progress-bar @(Model.ParsedPercent == 100 ? "bg-success" : "")" 
                        role="progressbar" 
                        style="width: @Model.ParsedPercent%;" 
                        aria-valuenow="@Model.ParsedPercent" 
                        aria-valuemin="0" 
                        aria-valuemax="100">
                        @(Model.ParsedPercent)%
                    </div>
                </div>
            }
            <a href="/Keyword/Index?fileId=@(Model.FileId)" class="card-link">View all keywords</a>
        </div>
    </div>
</div>