@model KeywordsApp.Models.File.FileViewModel

<div class="col-lg-3 col-md-6">
    <div id="@(string.Format("fileCard{0}",Model.FileId))" class="card mb-2">
        <div class="card-body">
            <div class="row pl-3">

                <i class="fas fa-2x fa-file-csv alert-light mt-2 mr-2"></i>
                <div>
            <h5 class="card-title">
                @Model.Name
            </h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.CreatedDate.ToString("d")</h6>
                </div>
            </div>
            @if(Model.ShowProgressBar){
                <div class="progress mb-2">
                    <div class="progress-bar @(Model.ParsedPercent == 100 ? "bg-success" : "")" 
                        role="progressbar" 
                        style="width: @Model.ParsedPercent%;" 
                        aria-valuenow="@Model.ParsedPercent" 
                        aria-valuemin="0" 
                        aria-valuemax="100">
                        @(Model.ParsedPercent)%
                    </div>
                </div>
            }
            <a href="/Keyword/Index?fileId=@(Model.FileId)" class="card-link">View @Model.TotalKeywordsCount @(Model.TotalKeywordsCount > 1 ?"keywords":"keyword")</a>
        </div>
    </div>
</div>